<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="navbar-text pull-right">
      <% if user_signed_in? %>
        <strong><%= link_to current_user.username, user_path(current_user.id) %></strong>
        <%= link_to t('views.navigate.edit_profil'), edit_user_registration_path, class: 'navbar-link' %> |
        <%= link_to t('views.navigate.log_out'), destroy_user_session_path, method: :delete, class: 'navbar-link'  %>
      <% else %>
        <%= link_to t('views.navigate.sign_in'), new_user_registration_path, class: 'navbar-link'  %> |
        <%= link_to t('views.navigate.log_in'), new_user_session_path, class: 'navbar-link'  %>
      <% end %>
    </p>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
