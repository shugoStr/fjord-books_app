<h1><%= t 'followings.followed_list' %></h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th><%= User.human_attribute_name(:name) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @followings.each do |follow_user| %>
      <tr>
        <th>
          <% if follow_user.avatar.attached? %>
            <%= image_tag follow_user.avatar.variant(resize_to_fill: [30, 30])%>
          <% end %>
        </th>
        <td><%= link_to follow_user.name, user_path(follow_user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t("views.common.back"), :back %>
